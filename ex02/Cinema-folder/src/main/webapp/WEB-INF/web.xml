<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">
    <display-name>Cinema</display-name>
    <description>Servlets and Spring Context</description>

    <filter-mapping>
        <filter-name>GuestFilter</filter-name>
        <url-pattern>
            /users/
            </url-pattern>
        <url-pattern>
            /users
            </url-pattern>
        <url-pattern>
            /users/signIn
            </url-pattern>
        <url-pattern>
            /users/signUp
            </url-pattern>
        <url-pattern>
            /users/signIn/  
            </url-pattern>
        <url-pattern>
            /users/signUp/  
            </url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>JsonFilter</filter-name>
        <url-pattern>
            /users/signIn
            </url-pattern>
        <url-pattern>
            /users/signUp
            </url-pattern>
        <url-pattern>
            /users/signIn/  
            </url-pattern>
        <url-pattern>
            /users/signUp/  
            </url-pattern>
    </filter-mapping>

</web-app>